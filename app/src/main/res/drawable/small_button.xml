<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="8dip"
                android:color="#DBDBF6"/>
            <solid
                android:color="#4A4A80"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:radius="20dp"/>
            <solid
                android:color="#040429"/>
            <stroke
                android:width="3dip"
                android:color="#DBDBF6"/>
        </shape>
    </item>
</selector>